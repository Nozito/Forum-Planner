{% extends 'base.html.twig' %}

{% block title %}Edit User Roles{% endblock %}

{% block body %}
    <div class="max-w-2xl mx-auto py-8">
        <h1 class="text-3xl font-bold mb-6">Modifier les roles utilisateurs</h1>

        <div class="bg-white shadow-md rounded-lg p-6">
            {{ form_start(form) }}

            <div class="space-y-6">
                <div>
                    {{ form_label(form.roles, 'Sélectionnez les rôles', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-4'}}) }}
                    <div class="space-y-4">
                        {% for role in form.roles %}
                            <div class="flex items-center">
                                {{ form_widget(role, {'attr': {'class': 'focus:ring-blue-500 h-4 w-4 text-blue-600 border-gray-300 rounded'}}) }}
                                <label class="ml-2 block text-sm text-gray-700">{{ role.vars.label }}</label>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>

            <div class="mt-6">
                <button class="w-full bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    Mettre à jour les rôles
                </button>
            </div>

            {{ form_end(form) }}
        </div>

        <div class="mt-6">
            <a href="{{ path('app_user_manager') }}" class="text-blue-500 hover:underline">
                Retourner à la liste des utilisateurs
            </a>
        </div>
    </div>
{% endblock %}
