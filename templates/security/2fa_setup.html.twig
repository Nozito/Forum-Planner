{% extends 'base.html.twig' %}

{% block title %}Configurer 2FA{% endblock %}

{% block body %}
    <div class="min-h-screen bg-white flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-lg w-full space-y-8">
            <h1 class="text-2xl font-bold mb-6 text-center text-indigo-600">Connectez vous grâce à l'A2F</h1>

            {% for message in app.flashes('success') %}
                <div class="bg-green-500 text-white p-4 mb-4 rounded-lg shadow-lg">{{ message }}</div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="bg-red-500 text-white p-4 mb-4 rounded-lg shadow-lg">{{ message }}</div>
            {% endfor %}

            <form method="POST" action="{{ path('2fa_login_check') }}" class="space-y-6">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <div>
                    <label for="auth_code" class="block text-sm font-medium text-gray-700">Entrez le code de vérification</label>
                    <input type="text" name="auth_code" id="auth_code" autocomplete="one-time-code" autofocus class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" required>
                </div>

                <div>
                    <button type="submit" value="Login" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-lg text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Activer 2FA
                    </button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}