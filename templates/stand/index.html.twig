{% extends 'base.html.twig' %}

{% block title %}Stand Index{% endblock %}

{% block body %}
    <div class="container mx-auto p-6">
        <h1 class="text-3xl font-semibold mb-6">Stands</h1>

        <div class="overflow-x-auto">
            <table class="min-w-full bg-white shadow-md rounded-lg">
                <thead>
                <tr class="bg-gray-100 text-gray-600 uppercase text-sm leading-normal">
                    <th class="py-3 px-6 text-left">Id</th>
                    <th class="py-3 px-6 text-left">Titre</th>
                    <th class="py-3 px-6 text-left">Image</th>
                    <th class="py-3 px-6 text-left">Description</th>
                    <th class="py-3 px-6 text-left">Capacité</th>
                    <th class="py-3 px-6 text-left">Durée</th>
                    <th class="py-3 px-6 text-center">Actions</th>
                </tr>
                </thead>
                <tbody class="text-gray-600 text-sm font-light">
                {% for stand in stands %}
                    <tr class="border-b border-gray-200 hover:bg-gray-100">
                        <td class="py-3 px-6 text-left">{{ stand.id }}</td>
                        <td class="py-3 px-6 text-left">{{ stand.title }}</td>
                        <td class="py-3 px-6 text-left">
                            {% if stand.picture %}
                                <img src="{{ asset('uploads/images/' ~ stand.picture) }}" alt="Stand Image"
                                     class="h-12 rounded-lg">
                            {% else %}
                                <span class="text-gray-500">Aucune image</span>
                            {% endif %}
                        </td>
                        <td class="py-3 px-6 text-left">{{ stand.description }}</td>
                        <td class="py-3 px-6 text-left">{{ stand.capacity }}</td>
                        <td class="py-3 px-6 text-left">{{ stand.duration ? stand.duration|date('H:i:s') : '' }}</td>
                        <td class="py-3 px-6 text-center">
                            <a href="{{ path('app_stand_show', {'id': stand.id}) }}"
                               class="text-blue-500 hover:text-blue-700">Show</a>
                            <a href="{{ path('app_stand_edit', {'id': stand.id}) }}"
                               class="ml-4 text-blue-500 hover:text-blue-700">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr class="border-b border-gray-200">
                        <td colspan="7" class="py-3 px-6 text-center text-gray-500">Aucun stands...</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="mt-6">
            {% if is_granted('ROLE_ORGANIZER') or is_granted('ROLE_ADMIN') %}
                <a href="{{ path('app_stand_new') }}"
                   class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600">Créer un stand</a>
            {% endif %}
        </div>
    </div>
{% endblock %}