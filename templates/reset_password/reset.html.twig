{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <div class="flex flex-col items-center justify-center min-h-screen bg-gray-100">
        <div class="w-full max-w-md p-8 bg-white rounded-md shadow-md">
            <h1 class="text-xl font-semibold text-center text-gray-700 mb-6">Réinitialiser votre mot de passe</h1>

            {{ form_start(resetForm) }}

            <!-- New password field -->
            <div class="mb-5">
                {{ form_label(resetForm.plainPassword.first, 'Nouveau mot de passe', {'label_attr': {'class': 'block text-sm font-medium text-gray-600'}}) }}
                {{ form_widget(resetForm.plainPassword.first, {
                    'attr': {
                        'class': 'block w-full mt-2 px-3 py-2 border border-gray-300 rounded-md text-gray-700 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm',
                        'placeholder': 'Votre nouveau mot de passe'
                    }
                }) }}
                {{ form_errors(resetForm.plainPassword.first) }}
            </div>

            <!-- Repeat password field -->
            <div class="mb-5">
                {{ form_label(resetForm.plainPassword.second, 'Répétez le mot de passe', {'label_attr': {'class': 'block text-sm font-medium text-gray-600'}}) }}
                {{ form_widget(resetForm.plainPassword.second, {
                    'attr': {
                        'class': 'block w-full mt-2 px-3 py-2 border border-gray-300 rounded-md text-gray-700 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm',
                        'placeholder': 'Confirmez votre mot de passe'
                    }
                }) }}
                {{ form_errors(resetForm.plainPassword.second) }}
            </div>

            <!-- Submit button -->
            <button type="submit" class="w-full py-2 px-4 text-sm font-semibold text-white bg-blue-500 rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-300">
                Réinitialiser le mot de passe
            </button>

            {{ form_end(resetForm) }}
        </div>
    </div>
{% endblock %}
