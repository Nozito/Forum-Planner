{% extends 'base.html.twig' %}

{% block title %}Réintialiser le mot de passe{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-gray-100">
        <div class="bg-white shadow-lg rounded-lg p-8 max-w-md w-full">

            <!-- Title -->
            <h1 class="text-2xl font-semibold text-gray-900 mb-6 text-center">Réintialiser votre mot de passe</h1>

            <!-- Alert for reset password errors -->
            {% for flash_error in app.flashes('reset_password_error') %}
                <div class="bg-red-50 border border-red-300 text-red-800 p-4 rounded-lg mb-4 shadow-sm" role="alert">
                    <p class="text-sm font-medium">{{ flash_error }}</p>
                </div>
            {% endfor %}

            <!-- Password reset form -->
            {{ form_start(requestForm) }}

            <!-- Email input field -->
            <div class="mb-6">
                {{ form_row(requestForm.email, {
                    'label': 'Adresse Mail :',
                    'attr': {
                        'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent',
                        'placeholder': 'Entrer votre email'
                    }
                }) }}
            </div>

            <!-- Instruction text -->
            <div class="text-sm text-gray-500 mb-6 text-center">
                Veuillez nous donner votre adresse email, vous recevrez un lien sécurisé pour réinitialiser votre mot de passe.
            </div>

            <!-- Submit button -->
            <div class="text-center">
                <button class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-3 px-5 rounded-lg shadow-md transition duration-300 ease-in-out">
                   Envoyer le lien de réinitialisation
                </button>
            </div>

            {{ form_end(requestForm) }}
        </div>
    </div>
{% endblock %}
